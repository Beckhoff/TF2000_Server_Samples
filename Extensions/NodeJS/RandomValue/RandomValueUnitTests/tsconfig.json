{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["mocha", "chai", "node"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}
